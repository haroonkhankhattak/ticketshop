{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "noEmit": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "dist-types"
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
